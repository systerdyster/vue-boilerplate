{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "typeRoots": [
            "node_modules/@types/"
        ],
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es6"
        ],
        "baseUrl": "./src",
        "paths": {
            "_models/*": [ "script/models/*" ],
            "_components/*": [ "script/components/*" ]
        }
    },
    "include": [
        "./src"
    ],
    "exclude": ["./node_modules", "./www"]
}
